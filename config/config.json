{
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": false,
    "workers": 4,
    "log_level": "INFO"
  },
  
  "cegid": {
    "base_url": "https://api.cegid.com/y2",
    "api_version": "v1",
    "api_key": "${CEGID_API_KEY}",
    "client_id": "${CEGID_CLIENT_ID}",
    "client_secret": "${CEGID_CLIENT_SECRET}",
    "timeout": 30,
    "retry_count": 3,
    "retry_delay": 1
  },
  
  "auth": {
    "enabled": true,
    "secret_key": "${JWT_SECRET_KEY}",
    "algorithm": "HS256",
    "token_expiry": 3600,
    "api_keys": [
      "${DEFAULT_API_KEY}"
    ],
    "oauth": {
      "provider": "cegid",
      "enabled": false,
      "auth_url": "https://auth.cegid.com/oauth/authorize",
      "token_url": "https://auth.cegid.com/oauth/token"
    }
  },
  
  "redis": {
    "enabled": true,
    "host": "${REDIS_HOST}",
    "port": 6379,
    "db": 0,
    "default_ttl": 300,
    "password": "${REDIS_PASSWORD}"
  },
  
  "rate_limit": {
    "enabled": true,
    "requests_per_minute": 1000,
    "requests_per_hour": 50000
  },
  
  "cors": {
    "enabled": true,
    "origins": [
      "*"
    ],
    "allow_credentials": true,
    "allow_methods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS"
    ],
    "allow_headers": [
      "*"
    ]
  },
  
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/mcp_server.log",
    "max_bytes": 10485760,
    "backup_count": 10
  },
  
  "monitoring": {
    "enabled": true,
    "metrics_port": 8001,
    "health_check_interval": 30
  }
}
