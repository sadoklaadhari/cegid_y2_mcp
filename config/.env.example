# Cegid Y2 MCP Server - Environment Configuration

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Cegid API Configuration
CEGID_BASE_URL=https://api.cegid.com/y2
CEGID_API_VERSION=v1
CEGID_API_KEY=your_api_key_here
CEGID_CLIENT_ID=your_client_id_here
CEGID_CLIENT_SECRET=your_client_secret_here
CEGID_TIMEOUT=30

# JWT Configuration
JWT_SECRET_KEY=change-me-in-production-very-secure-key
JWT_ALGORITHM=HS256
TOKEN_EXPIRY=3600

# Default API Key
DEFAULT_API_KEY=your_default_api_key_here

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# OAuth2 Configuration (Optional)
OAUTH_ENABLED=false
OAUTH_PROVIDER=cegid
OAUTH_AUTH_URL=https://auth.cegid.com/oauth/authorize
OAUTH_TOKEN_URL=https://auth.cegid.com/oauth/token

# Rate Limiting
RATE_LIMIT_ENABLED=true
REQUESTS_PER_MINUTE=1000
REQUESTS_PER_HOUR=50000

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=8001
HEALTH_CHECK_INTERVAL=30
